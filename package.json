{
  "name": "dtf-messenger-extension",
  "version": "0.1.0",
  "description": "DTF Messenger Chrome Extension - Chat functionality for DTF.ru",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-reload.js",
    "build": "vue-tsc && vite build && node scripts/build-extension.js",
    "build:dev": "vite build --mode development",
    "build:zip": "vue-tsc && vite build && node scripts/build-extension.js --zip",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "clean": "rm -rf dist",
    "watch": "vite build --mode development --watch",
    "icons:create": "node scripts/create-icons.js",
    "setup": "npm install && npm run icons:create",
    "changelog": "node scripts/generate-changelog.cjs",
    "release": "npm run lint && npm run type-check && npm run test && npm run build && npm run changelog && npm run build:zip && git add CHANGELOG.md && git commit -m 'chore(release): update changelog' && git push && git push --follow-tags",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.12.0",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "codecov": "^3.8.3",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.6",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.0",
    "vitest": "^1.0.0",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^1.8.27"
  },
  "keywords": [
    "chrome-extension",
    "vue3",
    "typescript",
    "dtf",
    "messenger",
    "chat"
  ],
  "author": "DTF Messenger Team",
  "license": "MIT"
}
